<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/opaquePurple</item>
        <item name="fontFamily">@font/comfortaa_family</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewTitleStyle">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/space_2x</item>
        <item name="android:paddingBottom">@dimen/space_2x</item>
        <item name="cornerRadius">100dp</item>
    </style>

</resources>
